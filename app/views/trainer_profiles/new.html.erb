<h1>New Page for trainers!</h1>
<%= form_tag "/trainer_profiles", method: :post do  %>
  <input type="text" name="name" placeholder="Name">
  <!-- <input type="text" name="gender" placeholder="gender"> -->
  <select name="gender" id="">
    <option value="male">Male</option>
    <option value="female">Female</option>
    <option value="other">Other</option>
  </select>
  <textarea type="text" name="experience" cols="30" rows="10" placeholder="Bio"></textarea>
  <textarea type="text" name="qualifications" cols="30" rows="10" placeholder="Qualifications"></textarea>
  <!-- <input type="text" name="qualifications" placeholder="qualifications"> -->
  <input hidden name="user_id" value="<%= current_user.id %>">
  <input type="submit" value="Submit">
<% end %>